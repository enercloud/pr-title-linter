{
  "name": "pull-request-title-linter",
  "version": "1.0.0",
  "description": "GitHub Action to lint pull request titles using commitlint",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enercloud/pull-request-title-linter.git"
  },
  "keywords": [
    "github-actions",
    "commitlint",
    "pr-linter"
  ],
  "author": "EnerCloud Consulting Pty Ltd",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/lint": "^19.8.0",
    "@commitlint/load": "^19.8.0",
    "@commitlint/parse": "^19.8.0",
    "@commitlint/types": "^19.8.0"
  },
  "devDependencies": {
    "@eslint/config-helpers": "^0.2.2",
    "@eslint/js": "^9.26.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.26.0",
    "eslint-config-xo": "^0.47.0",
    "husky": "^9.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
